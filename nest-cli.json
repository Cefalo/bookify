{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../logs/**/*",
        "outDir": "dist/logs"
      },
      {
        "include": "../bookify_db.sqlite",
        "outDir": "dist/bookify_db.sqlite"
      }
    ]
  }
}
